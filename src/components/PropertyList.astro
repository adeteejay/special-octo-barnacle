---
interface Props {
  title: string
  price: number
  beds: number
  furnished: boolean
  baths: number
  description: string
  distance: string
  updated: string
  image: string
  isExclusive?: boolean
}

const {
  title,
  price,
  beds,
  furnished,
  baths,
  description,
  distance,
  updated,
  image,
  isExclusive = false,
} = Astro.props
---

<div class="bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-200 flex">
  <div class="relative size-64 flex-shrink-0">
    <img src={image} alt={title} class="w-full h-full object-cover rounded-l-lg" />
    {
      isExclusive && (
        <div class="absolute top-2 left-2 bg-secondary text-white px-3 py-1 rounded-full text-xs">
          OpenRent Exclusive
        </div>
      )
    }
  </div>

  <div class="p-4 flex-grow">
    <div class="">
      <h3 class="text-lg font-semibold">{title}</h3>
      <span class="text-2xl font-bold text-primary">
        £{price}
        <span class="text-sm">pm</span>
      </span>
    </div>

    <div class="flex space-x-4 my-2">
      <span class="text-text-secondary" title={beds + ' Bedrooms'}>🛏️ {beds}</span>
      <span class="text-text-secondary" title={baths + ' Baths'}>🚿 {baths}</span>
      <span class="text-text-secondary" title={furnished ? 'Furnished' : 'Unfurnished'}>
        {!furnished ? '🏚️' : '🛋️'}
      </span>
    </div>

    <p class="text-text-secondary text-sm mb-4 line-clamp-2">
      {description}
      <!-- <button class="text-secondary underline ml-1">Read more</button> -->
    </p>

    <div class="flex justify-between items-center">
      <div class="flex space-x-4 text-xs text-text-secondary">
        <span>📍 {distance}</span>
        <span>🕒 {updated}</span>
      </div>
      <button
        class="bg-primary text-white px-4 py-2 rounded hover:scale-105 transition-transform duration-100"
      >
        View Details
      </button>
    </div>
  </div>
</div>
