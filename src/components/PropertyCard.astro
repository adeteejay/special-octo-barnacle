---
interface Props {
  title: string
  price: number
  beds: number
  baths: number
  description: string
  distance: string
  updated: string
  image: string
  isExclusive?: boolean
}

const {
  title,
  price,
  beds,
  baths,
  description,
  distance,
  updated,
  image,
  isExclusive = false,
} = Astro.props
---

<div class="bg-white rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-200">
  <div class="relative">
    <img src={image} alt={title} class="w-full aspect-video object-cover rounded-t-lg" />
    <div class="absolute top-1 right-1 bg-white px-3 py-1 rounded-full">
      <span class="text-xl font-bold text-primary">£{price}</span>
    </div>
    {
      isExclusive && (
        <div class="absolute top-2 left-2 bg-secondary text-white px-2 py-0.5 rounded-full text-xs">
          OpenRent Exclusive
        </div>
      )
    }
  </div>

  <div class="p-4">
    <h3 class="text-lg font-semibold mb-2">{title}</h3>

    <div class="flex space-x-4 mb-3">
      <span class="text-text-secondary">🛏️ {beds}</span>
      <span class="text-text-secondary">🚿 {baths}</span>
    </div>

    <p class="text-text-secondary text-sm mb-4 line-clamp-2">
      {description}
      <button class="text-secondary underline ml-1">Read more</button>
    </p>

    <div class="flex justify-between text-xs text-text-secondary mb-4">
      <span>📍 {distance}</span>
      <span>🕒 {updated}</span>
    </div>

    <button
      class="w-full bg-primary text-white py-2 rounded hover:scale-105 transition-transform duration-100"
    >
      View Details
    </button>
  </div>
</div>
